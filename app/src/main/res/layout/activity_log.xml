<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wave_shape"
        tools:context=".LogActivity" android:textAlignment="center">

    <TextView
            android:text="@string/welcome"
            android:layout_width="186dp"
            android:textSize="36sp"
            android:fontFamily="sans-serif-light"
            android:layout_height="62dp" android:id="@+id/txView"
            android:textAlignment="center"
            android:textColor="#CC0E4F"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="684dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="7dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginEnd="228dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>

    <CalendarView
            android:layout_width="270dp"
            android:layout_height="310dp" android:id="@+id/calendarView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="350dp"
            android:background="@drawable/wave_calendar"
            android:focusedMonthDateColor="#673AB7"
            android:selectedWeekBackgroundColor="@color/white"
            android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/txView"
            app:layout_constraintVertical_bias="0.466" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="107dp" android:layout_marginEnd="54dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <SearchView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/calendarView"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/CercaVW" />

    <ListView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/ListVW"
            app:layout_constraintTop_toBottomOf="@+id/CercaVW"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>