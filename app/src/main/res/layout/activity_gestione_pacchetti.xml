<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/wave_shape">

    <!-- Titolo -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gestione_pacchettI"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- RecyclerView per visualizzare i pacchetti -->

    <!-- Pulsanti per gestire i pacchetti -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_pacchetti"
        android:layout_width="380dp"
        android:layout_height="549dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_aggiungi_pacchetto"
            android:layout_width="158dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            android:text="@string/aggiungi_pacchetto" />

        <Button
            android:id="@+id/btn_modifica_pacchetto"
            android:layout_width="121dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            android:text="@string/modifica_pacchetto" />

        <Button
            android:id="@+id/btn_elimina_pacchetto"
            android:layout_width="128dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            android:text="@string/elimina_pacchetto" />
    </LinearLayout>
</LinearLayout>