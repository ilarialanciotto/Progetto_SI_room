<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/wave_shape">

    <!-- Titolo -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestione Pacchetti"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- RecyclerView per visualizzare i pacchetti -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_pacchetti"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Pulsanti per gestire i pacchetti -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_aggiungi_pacchetto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aggiungi Pacchetto"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/btn_elimina_pacchetto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elimina Pacchetto"
            android:layout_margin="8dp" />
    </LinearLayout>
</LinearLayout>