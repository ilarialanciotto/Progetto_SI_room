<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/gray_600">

    <!-- Titolo della nota -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aggiungi Nota"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:paddingBottom="10dp" android:id="@+id/txt"/>

    <!-- Campo di testo per la nota -->
    <EditText
            android:id="@+id/nota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="inserisci_la_nota"
            android:background="@drawable/edittext_border"
            android:padding="10dp"
            android:gravity="top"
            android:lines="3"
            android:maxLines="5"
            android:scrollbars="vertical"
            android:textColor="@color/black"/>

    <!-- Spinner per la selezione del pacchetto -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="seleziona_un_pacchetto"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="10dp"/>

    <Spinner
            android:id="@+id/spinnerPacchetto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:layout_marginBottom="10dp" android:backgroundTint="#07101010"/>

    <!-- Spinner per la selezione dello sviluppatore -->

    <!-- Pulsante Salva -->
    <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="salva_nota"
            android:layout_gravity="center"
            android:backgroundTint="@color/oxford_blue"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_marginTop="10dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/LL">
    </LinearLayout>

</LinearLayout>