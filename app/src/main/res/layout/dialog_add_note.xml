<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp" android:backgroundTint="#D081E2">

    <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aggiungi_una_nota"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:id="@+id/LL">
            <EditText
                    android:id="@+id/nota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/inserisci_la_tua_nota"
                    android:padding="10dp"
                    android:inputType="textMultiLine"/>
        </LinearLayout>
    </ScrollView>
    <Button
            android:text="salva"
            android:layout_width="150dp"
            android:layout_height="50dp" android:id="@+id/btn" android:backgroundTint="#7444E4"
            android:textColor="#050505"/>


</LinearLayout>
