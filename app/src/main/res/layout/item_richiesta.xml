<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Testo della Richiesta -->
        <TextView
            android:id="@+id/txtRichiesta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/richiesta_del_cliente"
            android:textSize="18sp"
            android:textColor="@color/oxford_blue"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Risposta dello Sviluppatore -->
        <TextView
            android:id="@+id/txtRisposta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/risposta_dello_sviluppatore"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:maxLines="3"
            app:layout_constraintTop_toBottomOf="@id/txtRichiesta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Data della Richiesta -->
        <TextView
            android:id="@+id/txtDataRichiesta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_10_12_2024"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/txtRisposta"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Stato della Richiesta -->
        <TextView
            android:id="@+id/txtStato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stato_in_attesa"
            android:textSize="14sp"
            android:textColor="@color/orange_web"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/txtRisposta"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
